---
layout: layouts/base.njk
section: post
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>
    Pages:
    {% for page in collections.page %}
    {{ page.data.body }}
    {% endfor %}
  {% if related %}
    <p>
    
    {% for r in related %}
    {% set pageURL %}/{{ r | slug }}/{% endset %}
    <a href="{{ pageURL }}">{{ r }}</a>
    {% endfor %}
    </p>
  {% endif %}
   
  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>

<nav>
  <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
</nav>
